{
  "name": "fusionspim/php-password-checker",
  "description": "Sense checks when a user picks a new password",
  "keywords": [
    "password",
    "validation"
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-mbstring": "^7.2"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.6",
    "fusionspim/php-cs-fixer-config": "^7.1",
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "FusionsPim\\PhpPasswordChecker\\": "src/"
    }
  },
  "scripts": {
    "fix": [
      "php-cs-fixer fix --config=.php_cs.dist; echo",
      "composer normalize; echo"
    ],
    "test": [
      "phpunit --stop-on-failure --stop-on-error; echo"
    ]
  }
}
